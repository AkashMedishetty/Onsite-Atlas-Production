NODE_ENV=production
PORT=5000
# Shared upload directory used by every release
UPLOADS_DIR=/var/www/atlas-uploads
CLUSTERING_ENABLED=false
# The backend is running on 5000; keep it consistent
PORT=5000

# Max upload size accepted by Express-Fileupload (optional but nice)
MAX_FILE_SIZE=50mb
# Use your new Atlas connection string (with URL-encoded password if needed)
MONGODB_URL=

JWT_SECRET=your_super_secure_jwt_secret_here
JWT_ACCESS_EXPIRATION_MINUTES=240
JWT_REFRESH_EXPIRATION_DAYS=30
JWT_RESET_PASSWORD_EXPIRATION_MINUTES=10
JWT_VERIFY_EMAIL_EXPIRATION_MINUTES=10
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=onsite-atlas-refresh-secret
JWT_REFRESH_EXPIRES_IN=30d
BYPASS_AUTH=false
DEBUG=false
JWT_REGISTRANT_EXPIRES_IN=10h


